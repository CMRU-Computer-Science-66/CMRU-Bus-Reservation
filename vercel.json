{
	"$schema": "https://openapi.vercel.sh/vercel.json",
	"bunVersion": "1.x",
	"framework": null,
	"buildCommand": "bun install && bun run build",
	"installCommand": "bun install",
	"outputDirectory": "dist",
	"cleanUrls": true,
	"trailingSlash": false,
	"rewrites": [
		{
			"source": "/api/:path*",
			"destination": "${API_URL}/:path*"
		},
		{
			"source": "/(.*)",
			"destination": "/index.html"
		}
	],
	"headers": [
		{
			"source": "/chunk-:name.(js|css)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		},
		{
			"source": "/:name.(svg|png|jpg|jpeg|gif|ico|woff|woff2|ttf|eot)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		},
		{
			"source": "/index.html",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "no-cache, no-store, must-revalidate"
				}
			]
		}
	]
}
